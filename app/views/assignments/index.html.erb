<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col s12">
    <ul class="tabs">
      <li class="tab col s3"><a class="active" href="#test1">Current assignments</a></li>
      <li class="tab col s3"><a href="#test2">Past assignments</a></li>
      <li class="tab col s3"><a href="#test3">All assignments by date</a></li>
    </ul>
  </div>
    
  
  <div id="test1" class="col s12">
    <% if (!@current_assignments.nil?) then %>
    <table class = "striped">
      <thead>
        <tr>
          <th>Store</th>
          <th>Employee</th>
          <th>Start date</th>
          <th>Pay level</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @current_assignments.each do |assignment| %>
          <tr>
            <td><%= assignment.store_id %></td>
            <td><%= assignment.employee_id %></td>
            <td><%= assignment.start_date %></td>
            <td><%= assignment.pay_level %></td>
            <td><%= link_to 'Show', assignment_path(assignment), :class=> "waves-effect waves-light btn light-green" %></td>
            <td><%= link_to 'Edit', edit_assignment_path(assignment), :class=> "waves-effect waves-light btn light-blue" %></td>
            <td><%= link_to 'Destroy', assignment, confirm: 'Are you sure?', data: { confirm: 'Are you sure?' }, method: :delete, :class=> "waves-effect waves-light btn red" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%end%>
  </div>
  
  
  <div id="test2" class="col s12">
    <% if (!@past_assignments.nil?) then %>
    <table class = "striped">
      <thead>
        <tr>
          <th>Store</th>
