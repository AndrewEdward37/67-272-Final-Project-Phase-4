
<p id="notice"><%= notice %></p>

<div class="row">
  
  <div class="col s12">
    <ul class="tabs">
      <li class="tab col s3"><a class="active" href="#test1">Active jobs</a></li>
      <li class="tab col s3"><a href="#test2">Inactive jobs</a></li>
    </ul>
  </div>
    
  <div id="test1" class="col s12">
    <% if (!@jobs.active.nil?) then %>
    <table class= "striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% 
        @jobs.active.each do |job| %>
          <tr>
            <td><%= job.name %></td>
            <td><%= job.description %></td>
            <td><%= link_to 'Show', job_path(job), :class=> "waves-effect waves-light btn light-green" %></td>
            <td><%= link_to 'Edit', edit_job_path(job), :class=> "waves-effect waves-light btn light-blue" %></td>
            <td><%= link_to 'Destroy', job, confirm: 'Are you sure?', data: { confirm: 'Are you sure?' }, method: :delete, :class=> "waves-effect waves-light btn red" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%end%>
  </div>
    <div id="test2" class="col s12">
      <% if (!@jobs.inactive.nil?) then %>
      <table class = "striped">
        <thead>
          <tr>
            <th>job</th>
            <th>Description</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% 
          @jobs.inactive.each do |job| %>
            <tr>
              <td><%= job.name %></td>
              <td><%= job.description %></td>
              <td><%= link_to 'Show', job_path(job), :class=> "waves-effect waves-light btn light-green" %></td>
              <td><%= link_to 'Edit', edit_job_path(job), :class=> "waves-effect waves-light btn light-blue" %></td>
              <td><%= link_to 'Destroy', job, confirm: 'Are you sure?', data: { confirm: 'Are you sure?' }, method: :delete, :class=> "waves-effect waves-light btn red" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%end%>
</div>

<br>
<%= link_to 'New job', new_job_path, :class=> "waves-effect waves-light btn green" %>
