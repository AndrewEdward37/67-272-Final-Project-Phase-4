<p id="notice"><%= notice %></p>

<div class="row">
  
  <div class="col s12">
    <ul class="tabs">
      <li class="tab col s3"><a class="active" href="#test1">Active stores</a></li>
      <li class="tab col s3"><a href="#test2">Inactive stores</a></li>
    </ul>
  </div>
    
  <div id="test1" class="col s12">
    <% if (!@active_stores.nil?) then %>
    <table class= "striped">
      <thead>
        <tr>
          <th>Store name</th>
          <th>City</th>
          <th>Phone</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% 
        @active_stores.each do |store| %>
          <tr>
            <td><%= store.name %></td>
            <td><%= store.city %></td>
            <td><%= store.phone %></td>
            <td><%= link_to 'Show', store_path(store), :class=> "waves-effect waves-light btn light-green" %></td>
            <td><%= link_to 'Edit', edit_store_path(store), :class=> "waves-effect waves-light btn light-blue" %></td>
            <td><%= link_to 'Destroy', store, confirm: 'Are you sure?', data: { confirm: 'Are you sure?' }, method: :delete, :class=> "waves-effect waves-light btn red" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%end%>
  </div>
    <div id="test2" class="col s12">
      <% if (!@inactive_stores.inactive.nil?) then %>
      <table class = "striped">
        <thead>
          <tr>
            <th>store</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% 
          @inactive_stores.each do |store| %>
            <tr>
              <td><%= store.name %></td>
              <td><%= store.city %></td>
              <td><%= store.phone %></td>
              <td><%= link_to 'Show', store_path(store), :class=> "waves-effect waves-light btn light-green" %></td>
              <td><%= link_to 'Edit', edit_store_path(store), :class=> "waves-effect waves-light btn light-blue" %></td>
              <td><%= link_to 'Destroy', store, confirm: 'Are you sure?', data: { confirm: 'Are you sure?' }, method: :delete, :class=> "waves-effect waves-light btn red" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%end%>
</div>

<br>
<%= link_to 'New store', new_store_path, :class=> "waves-effect waves-light btn green" %>