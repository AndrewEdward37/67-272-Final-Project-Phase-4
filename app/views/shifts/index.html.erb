<p id="notice"><%= notice %></p>

<div class="row">
  
  <div class="col s12">
    <ul class="tabs">
      <li class="tab col s3"><a class="active" href="#test1">Active shifts</a></li>
      <li class="tab col s3"><a href="#test2">Inactive shifts</a></li>
    </ul>
  </div>
    
  <div id="test1" class="col s12">
    <% if (!@shifts.incomplete.nil?) then %>
    <table class= "striped">
      <thead>
        <tr>
          <th>Assignment</th>
          <th>Date</th>
          <th>Start time</th>
          <th>End time</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% 
        @shifts.incomplete.each do |shift| %>
          <tr>
            <td><%= shift.assignment %></td>
            <td><%= shift.date %></td>
            <td><%= shift.start_time %></td>
            <td><%= shift.end_time %></td>
            <td><%= link_to 'Show', shift_path(shift), :class=> "waves-effect waves-light btn light-green" %></td>
            <td><%= link_to 'Edit', edit_shift_path(shift), :class=> "waves-effect waves-light btn light-blue" %></td>
            <td><%= link_to 'Destroy', shift, confirm: 'Are you sure?', data: { confirm: 'Are you sure?' }, method: :delete, :class=> "waves-effect waves-light btn red" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%end%>
  </div>
    <div id="test2" class="col s12">
      <% if (!@shifts.completed.nil?) then %>
      <table class = "striped">
        <thead>
          <tr>
            <th>Assignment</th>
            <th>Date</th>
            <th>Start time</th>
            <th>End time</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% 
          @shifts.completed.each do |shift| %>
            <tr>
              <td><%= shift.assignment %></td>
              <td><%= shift.date %></td>
              <td><%= shift.start_time %></td>
              <td><%= shift.end_time %></td>
              <td><%= link_to 'Show', shift_path(shift), :class=> "waves-effect waves-light btn light-green" %></td>
              <td><%= link_to 'Edit', edit_shift_path(shift), :class=> "waves-effect waves-light btn light-blue" %></td>
              <td><%= link_to 'Destroy', shift, confirm: 'Are you sure?', data: { confirm: 'Are you sure?' }, method: :delete, :class=> "waves-effect waves-light btn red" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%end%>
</div>

<br>
<%= link_to 'New shift', new_shift_path, :class=> "waves-effect waves-light btn green" %>
