<%= form_with(model: employee, local: true) do |form| %>
  <% if employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </div>
  
  <%= form.fields_for :user do |field|%>
    <%= field.label "Email" %>
    <%= field.text_field :email %>
    
    <%= field.label "Password" %>
    <%= field.password_field :password %>
  <% end %>
  
  <div class="field">
    <%= form.label :ssn %>
    <%= form.text_field :ssn %>
  </div>

  <div class="field">
    <%= form.label :date_of_birth %>
    <%= form.text_field :date_of_birth, prompt: "Start Date", class: "datepicker", :value => (form.object.date_of_birth.strftime('%B %d, %Y') if form.object.date_of_birth != nil)%>
    
  </div>

  <div class="field">
    <%= form.label :phone %>
    <%= form.text_field :phone %>
  </div>
 
  <div class="field">
    <%= form.label :role %>
    <%= form.text_field :role %>
  </div>

  <div class="input-field">
    <%= form.label :active %>
    <%= form.select :active, [['Yes', true], ['No',false]] %>
  </div>


  <div class="actions">
    <%= form.submit :class=>"waves-effect waves-light btn green" %>
  </div>
<% end %>
