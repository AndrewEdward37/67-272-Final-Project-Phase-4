<p id="notice"><%= notice %></p>

<div class="row">
  
  <div class="col s12">
    <ul class="tabs">
      <li class="tab col s3"><a class="active" href="#test1">Active Employees</a></li>
      <li class="tab col s3"><a href="#test2">Inactive Employees</a></li>
      <li class="tab col s3"><a href="#test4">Managers</a></li>
