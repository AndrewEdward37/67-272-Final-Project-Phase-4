  <div id="test1" class="col s12">
    <% if (!@active_employees.nil?) then %>
    <table class= "striped">
      <thead>
        <tr>
          <th>First name</th>
          <th>Last name</th>
          <th>Role</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% 
        @active_employees.each do |employee| %>
          <tr>
            <td><%= employee.first_name %></td>
            <td><%= employee.last_name %></td>
            <td><%= employee.role %></td>
            <td><%= link_to 'Show', employee_path(employee), :class=> "waves-effect waves-light btn light-green" %></td>
            <td><%= link_to 'Edit', edit_employee_path(employee), :class=> "waves-effect waves-light btn light-blue" %></td>
            <td><%= link_to 'Destroy', employee, confirm: 'Are you sure?', data: { confirm: 'Are you sure?' }, method: :delete, :class=> "waves-effect waves-light btn red" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%end%>
